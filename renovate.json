{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "kubernetes": {
    "fileMatch": [
      "^argocd-commenter/",
      "^hafas-graphql/",
      "^imagepullsecret-patcher/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/nycodeghg/hafas-projects/hafas-graphql"
      ],
      "versioning": "regex:^(?<compatibility>.*)?@sha256:(?<build>[0-9a-f]+)$",
      "automerge": true
    }
  ]
}
