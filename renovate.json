{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:pinDigests"
  ],
  "kubernetes": {
    "fileMatch": [
      "^argocd-commenter/",
      "^hafas-graphql/",
      "^imagepullsecret-patcher/",
      "^whoami/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/nycodeghg/hafas-projects/hafas-graphql"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    }
  ],
  "hostRules": [
    {
      "matchHost": "ghcr.io",
      "username": "nycodeghg",
      "encrypted": {
        "password": ""
      }
    }
  ]
}
