{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "kubernetes": {
    "fileMatch": [
      "^argocd-commenter/",
      "^imagepullsecret-patcher/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/nycodeghg/hafas-projects/hafas-graphql"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "description": "Update hafas-graphql nightly build",
      "fileMatch": "^hafas-graphql/deployment.yaml$",
      "matchStrings": [
        "image: (?<depName>[^:]*):(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
